<script>
    document.write ("Estou escrevendo do mundo JavaScript no mundo HTML");
    document.write ("<br>");
    // Estudo de Concatenação, string e números
    // document.write traz um resultado de html dentro de javascript
    document.write ("Rafaela nasceu em ")
    document.write ((2016 - 39) + "<br>");
    document.write (" A média das idades é ")
    document.write (((20 + 10 + 30)/ 3) + "<br>");
    document.write (" Rafaela casou em " + (2016 - 16));
    document.write ("<br>");
    document.write ("A média do valor das viagens é " + ( 200 + 100 + 300 + 400)/4);
    document.write ("<br>");
    document.write ("Eu acertei " + 15/50*100 + "% da prova" + "<br>"); 
    // Estudo de variáveis
    // var ajuda a fazer a manutenção do código, é declarada uma única vez e pode ser utilizada em vários momentos
    // não se repete o prefixo 
    // nunca se pode usar maiúscula na var  
    var ano = 2022
    document.write ("João tem " + (ano - 1996) + " anos")
    document.write ("<br>");
    document.write ("Erika tem " + (ano - 1995) + " anos")
    document.write ("<br>");
    document.write ("Mariana tem " + (ano - 1998) + " anos")
    document.write ("<br>");


    var minhaidade = 27

    document.write("Eu nasci em " + (2022 - minhaidade) );  
</script>

   
